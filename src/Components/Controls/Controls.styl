/**
 * Controls
 */

+prefix-classes('mbst-')

	#mbst-controls
		margin -16px
		padding 16px 16px 85px
		position relative

		.no-is_active
			pointer-events none
			opacity .3

		&:before
			content ""
			position absolute
			background-color rgba(0,0,0,0.1)
			width 100%
			height 1px
			top 16px
			left 0

		.control-container
			position relative
			padding 25px 0
			width 100%
			margin 0
			color rgba(0,0,0,0.87)

			+ .control-container
				border-top 1px solid rgba(0,0,0,0.1)

			.control + .control
				margin-top 30px

#mbst-controls

	.components-base-control__label
		font-weight 600
		margin-bottom 1.5em

	.components-base-control__help
		font-style normal
		margin 15px 0 0
		opacity 0.8
		white-space pre-wrap

	.components-base-control + .components-base-control
		margin 0

	.mbst-control-range .components-base-control__label
		margin-bottom 1em

	.mbst-control-toggle .components-base-control__label
		margin-bottom 1.5em

	.components-base-control__field
		margin-bottom 0
